@inject ShoppingCartState _shoppingCartState

<div style="display: flex;">
    <div style="border: 1px solid grey; margin-bottom: 20px; flex-grow:1;">
        <h2>Shop</h2>
        @foreach (var item in AvailableItems)
        {
            <Item Name=@item />
        }
    </div>
    <div style="border: 1px solid grey; margin-bottom: 20px;">
        <h2>Shopping Cart</h2>
        <p><strong style="padding: 3px; color: white; background: green;">@(_shoppingCartState.Items.Count())</strong> Items</p>
        <ShoppingCart />
    </div>
</div>

@code{
    [Parameter]
    public string Name { get; set; }

    private List<string> AvailableItems = new List<string>(){
        "Apple",
        "Banana",
        "Orange",
        "Kiwi",
    };
    protected override void OnInitialized()
    {
        _shoppingCartState.OnChange += StateHasChanged;
    }
}